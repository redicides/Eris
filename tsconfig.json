{
    "compilerOptions": {
      // Strict Type-Checking
      "strict": true,
      "alwaysStrict": true,
  
      // Module And Library Options
      "lib": ["ESNext"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "importHelpers": true,
  
      // Source Map Options
      "sourceMap": true,
      "sourceRoot": "/",
      "inlineSources": true,
  
      // Advanced Options
      "skipLibCheck": true,
      "downlevelIteration": true,
  
      // Output Options
      "target": "ES2020",
      "outDir": "dist",
      "rootDir": "src",
  
      // Decorator Options
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
  
      // Additional Options
      "pretty": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
  
      // Path Mapping
      "paths": {
        "@/*": ["./src/*"],
        "@core/*": ["./src/core/*"],
        "@eris/*": ["./src/core/eris/*"],
        "@utils/*": ["./src/core/utils/*"],
        "@managers/*": ["./src/core/managers/*"],
      }
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "prisma"]
  }
